metadata:
  language: v1-beta
  name: "Mailgun API Key"
  description: "Looks for Mailgun API Key regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "key-[0-9a-zA-Z]{32}" then
     report issue:
       severity: info
       confidence: high
       detail: "Mailgun API Key regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
