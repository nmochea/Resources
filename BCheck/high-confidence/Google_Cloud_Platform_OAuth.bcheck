metadata:
  language: v1-beta
  name: "Google Cloud Platform OAuth"
  description: "Looks for Google Cloud Platform OAuth regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "[0-9]+-[0-9A-Za-z_]{32}\\.apps\\.googleusercontent\\.com" then
     report issue:
       severity: info
       confidence: high
       detail: "Google Cloud Platform OAuth regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
