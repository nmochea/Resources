metadata:
  language: v1-beta
  name: "EC"
  description: "Looks for EC regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "-----BEGIN EC PRIVATE KEY-----" then
     report issue:
       severity: info
       confidence: tentative
       detail: "EC regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
