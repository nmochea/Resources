metadata:
  language: v1-beta
  name: "AWS Access Key"
  description: "Looks for AWS Access Key regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "(A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}" then
     report issue:
       severity: info
       confidence: tentative
       detail: "AWS Access Key regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
