metadata:
  language: v1-beta
  name: "Slack"
  description: "Looks for Slack regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "xox[baprs]-([0-9a-zA-Z]{10,48})?" then
     report issue:
       severity: info
       confidence: tentative
       detail: "Slack regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
