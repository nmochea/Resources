metadata:
  language: v1-beta
  name: "contentful_v2_access_token"
  description: "Looks for contentful_v2_access_token regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "contentful[_-]?v2[_-]?access[_-]?token(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "contentful_v2_access_token regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
