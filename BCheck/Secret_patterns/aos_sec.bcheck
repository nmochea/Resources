metadata:
  language: v1-beta
  name: "aos_sec"
  description: "Looks for aos_sec regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "aos[_-]?sec(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "aos_sec regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
