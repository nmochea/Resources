metadata:
  language: v1-beta
  name: "codecov_token"
  description: "Looks for codecov_token regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "codecov[_-]?token(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "codecov_token regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
