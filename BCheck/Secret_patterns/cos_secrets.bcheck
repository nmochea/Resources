metadata:
  language: v1-beta
  name: "cos_secrets"
  description: "Looks for cos_secrets regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "cos[_-]?secrets(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "cos_secrets regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
