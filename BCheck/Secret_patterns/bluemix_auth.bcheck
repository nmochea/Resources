metadata:
  language: v1-beta
  name: "bluemix_auth"
  description: "Looks for bluemix_auth regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "bluemix[_-]?auth(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "bluemix_auth regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
