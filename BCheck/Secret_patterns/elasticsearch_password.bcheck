metadata:
  language: v1-beta
  name: "elasticsearch_password"
  description: "Looks for elasticsearch_password regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "elasticsearch[_-]?password(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "elasticsearch_password regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
