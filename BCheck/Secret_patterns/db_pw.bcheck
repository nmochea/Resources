metadata:
  language: v1-beta
  name: "db_pw"
  description: "Looks for db_pw regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "db[_-]?pw(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "db_pw regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
