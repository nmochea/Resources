metadata:
  language: v1-beta
  name: "app_secrete"
  description: "Looks for app_secrete regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "app[_-]?secrete(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "app_secrete regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
