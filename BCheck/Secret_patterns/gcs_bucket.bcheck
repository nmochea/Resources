metadata:
  language: v1-beta
  name: "gcs_bucket"
  description: "Looks for gcs_bucket regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "gcs[_-]?bucket(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "gcs_bucket regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
