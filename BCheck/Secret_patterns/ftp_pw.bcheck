metadata:
  language: v1-beta
  name: "ftp_pw"
  description: "Looks for ftp_pw regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "ftp[_-]?pw(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "ftp_pw regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
