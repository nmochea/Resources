metadata:
  language: v1-beta
  name: "cocoapods_trunk_token"
  description: "Looks for cocoapods_trunk_token regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "cocoapods[_-]?trunk[_-]?token(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "cocoapods_trunk_token regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
