metadata:
  language: v1-beta
  name: "b2_bucket"
  description: "Looks for b2_bucket regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "b2[_-]?bucket(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "b2_bucket regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
