metadata:
  language: v1-beta
  name: "database_host"
  description: "Looks for database_host regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "database[_-]?host(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "database_host regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
