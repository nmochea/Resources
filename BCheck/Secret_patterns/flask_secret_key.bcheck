metadata:
  language: v1-beta
  name: "flask_secret_key"
  description: "Looks for flask_secret_key regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "flask[_-]?secret[_-]?key(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "flask_secret_key regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
