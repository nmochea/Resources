metadata:
  language: v1-beta
  name: "Facebook Client ID"
  description: "Looks for Facebook Client ID regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "(facebook|fb)(.{0,20})?['"][0-9]{13,17}['"]" then
     report issue:
       severity: info
       confidence: tentative
       detail: "Facebook Client ID regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
