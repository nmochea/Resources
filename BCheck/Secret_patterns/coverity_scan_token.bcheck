metadata:
  language: v1-beta
  name: "coverity_scan_token"
  description: "Looks for coverity_scan_token regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "coverity[_-]?scan[_-]?token(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "coverity_scan_token regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
