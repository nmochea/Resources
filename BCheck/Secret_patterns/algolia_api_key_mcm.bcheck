metadata:
  language: v1-beta
  name: "algolia_api_key_mcm"
  description: "Looks for algolia_api_key_mcm regex in page source."
  author: "@nmochea"
  tags: "nmochea", "token", "exposure"

given response then
  if {latest.response} matches "algolia[_-]?api[_-]?key[_-]?mcm(=| =|:| :)" then
     report issue:
       severity: info
       confidence: tentative
       detail: "algolia_api_key_mcm regex found in page."
       remediation: "Review and remove unnecessary exposure of keys and/or sensitive data from page source."
  end if
